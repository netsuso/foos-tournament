<table class="Table Table--condensed">
  <% @classification.each do |c| %>
    <% if c[:highlight] %>
      <tr class="active">
    <% else %>
      <tr>
    <% end %>
      <td><%= @players[c[:player_id]].name %></td>
      <td><span title="<%= "#{'%.2f' % c[:points]}" %>"><%= "#{'%.0f' % c[:points]}" %></span></td>
    </tr>
  <% end %>
</table>
